<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#870010" >

    <LinearLayout
        android:id="@+id/lmageView1"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/slidermenu"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="7dp"
            android:src="@drawable/nav_button" />
    </LinearLayout>

    <TextView
        android:id="@+id/usersonline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/icon_green_circle"
        android:gravity="center_vertical"
        android:text=" 0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="120"
        android:gravity="center" >

        <AutoCompleteTextView
            android:id="@+id/main_autosearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@drawable/saved"
            android:ems="10"
            android:hint="enter category/Business Name"
            android:paddingLeft="7dip"
            android:paddingRight="50dip"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/search_searchicon"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/main_autosearch"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/searchResultHome"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="7dp"
            android:src="@drawable/home_button" />
    </LinearLayout>

</LinearLayout>